// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLE {
  BUYER
  SELLER
}

model user {
  id String @id @default(uuid())
  name String
  password_hash String
  role ROLE
  pets pet[]
}

model pet {
  id String @id @default(uuid())
  category String
  breed String
  description String
  image_url String
  price Float
  seller  user @relation(references: [id],fields: [userid])
  userid  String
}

